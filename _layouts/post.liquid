<!doctype html>
<html lang="de">
<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    {% if page.visible == 0 %}
    <META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
    {% endif %}
    <meta name="author" content="education.forum-open.de">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/static/ForumOpen.ico">
    {% if page.twitter_large_img %}
    <meta name="twitter:card" content="summary_large_image" />
    {% else %}
    <meta name="twitter:card" content="summary" />
    {% endif %}
    <meta name="twitter:title" content="{{ page.title }}" />
    <meta name="twitter:description" content="{{ page.teaser }}" />
    {% if page.twitter_large_img %}
    <meta name="twitter:image" content="{{ page.twitter_large_img }}" />
    {% endif %}
    {% if page.twitter_img %}
    <meta name="twitter:image" content="{{ page.twitter_img }}" />
    {% endif %}
    <link rel="stylesheet" href="/assets/main.css">
    {% seo %}
    <!-- Piwik -->
   <script type="text/javascript">
       var _paq = _paq || [];
       /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
       _paq.push(['trackPageView']);
       _paq.push(['enableLinkTracking']);
       (function() {
           var u = "//piwik.okfn.de/";
           _paq.push(['setTrackerUrl', u + 'piwik.php']);
           _paq.push(['setSiteId', '35']);
           var d = document,
               g = d.createElement('script'),
               s = d.getElementsByTagName('script')[0];
           g.type = 'text/javascript';
           g.async = true;
           g.defer = true;
           g.src = u + 'piwik.js';
           s.parentNode.insertBefore(g, s);
       })();
   </script>
   <!-- End Piwik Code -->
</head>
<body>
{% include header.liquid %}
{% raw %}
<script id="search-results-template" type="text/mustache">
  {{#entries}}
    <article>
      <h3>
        {{#date}}<small><time datetime="{{pubdate}}" pubdate>{{displaydate}}</time></small>{{/date}}
        <a href="{{url}}">{{title}}</a>
      </h3>
      {{#is_post}}
      <ul>
        {{#tags}}<li>{{.}} </li>{{/tags}}
      </ul>
      {{/is_post}}
    </article>
  {{/entries}}
</script>
{% endraw %}
<div class="page-wrap">
    <section id="search-results" style="display: none;"> </section>
    <div class="row">
        <section class="section first col-xs-24">
            <div class="content-wrap subpage">

                <h1 class="section-headline">{{ page.headline }}</h1>
                <div class="post-date">{{ page.title }} - {{ page.year }}</div>
                {% if page.author %}
                <div class="blue post-author">{{ page.author }}</div>
                {% endif %}
            </div>
            <!-- a fullwidth image -->
            {% if page.header_background %}
            {% include partials/content/content-fullwidth-image.liquid src=page.header_background caption=page.header_background_caption %}
            {% endif %}
            <div class="content-wrap subpage">
                <h1 class="section-headline"></h1>
            </div>
            <div class="content-wrap subpage">
                <div class="subpage-content konzepte">
                    {{ content }}
                </div>
            </div>
        </section>

        <!-- übersicht fachgruppen -->
        {% if page.grouplink %}
            <div class="row">
                <section class="section green col-xs-24">
                    <div class="content-wrap">
                        <h2 class="section-headline">Weitere Arbeitsgruppen aus {{ page.year }}</h2>
                    </div>
                    <!-- blog teasers -->
                    <div class="content-wrap btn-wrap">
                        <a class="edu-btn white" href="{{ page.grouplink }}">Zur Übersicht</a>
                    </div>
                </section>
            </div>
        {% endif %}
        <!-- blog -->
    </div>

</div>
{% include footer.liquid %}
