<div class="teaser blog-teaser isotope-item {% if include.art == 'noer' %}edusprint-blog{% endif %} {{ include.fach }} {{ include.long-fach }} {{ include.filter }} {{ include.dauer }} {{ include.zielgruppe }} {{ include.top_kmk }} {{ include.medien }} {{ include.fach }} {{ include.type }} {% if include.type == "featured" %}col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xlg-8 {% else %}col-xs-12 col-sm-12 col-md-8 col-lg-6 col-xlg-4{% endif %}">
  {% if include.art != 'noer' %}
    <a href="/oer/{{ include.title }}" target="_blank" class="teaser-inner">
  {% else %}
    <a href="{{ include.link }}" rel="noopener noreferrer" target="_blank" class="teaser-inner">
  {% endif %}
        <div class="teaser-image">
            <!--<img class="img-responsive" src="{{ site.baseurl }}{{ include.src }}"/>-->
        </div>
        <div class="teaser-content blog-teaser-content">
            <span class="teaser-blog-tag">Aus dem Blog</span>
            <h3 class="teaser-headline">{{ include.headline }}</h3>
            <p class="teaser-copy">{{ include.copy }}</p>
            {% assign tags = include.category | remove:"[" | remove:']'| remove:'"' %}
            {% if tags != '#' %}
            <span class="teaser-cats">{{ tags }}</span>
            {% endif %}
            <div class="edusprint-cats">
                {% if include.zielgruppe contains 'zielgruppe-1' %}
                <div class="icon small kita"></div>
                {% endif %}
                {% if include.zielgruppe contains 'zielgruppe-2' %}
                <div class="icon small grundstufe-1-3"></div>
                {% endif %}
                {% if include.zielgruppe contains 'zielgruppe-3' %}
                <div class="icon small grundstufe-4-6"></div>
                {% endif %}
                 {% if include.zielgruppe contains 'zielgruppe-4' %}
                <div class="icon small sekundarstufe-1"></div>
                {% endif %}
                 {% if include.zielgruppe contains 'zielgruppe-5' %}
                <div class="icon small sekundarstufe-2"></div>
                {% endif %}
            </div>
            <div class="teaser-arrow has-arrow"></div>
        </div>
    </a>
</div>
