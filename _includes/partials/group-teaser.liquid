<div class="teaser lab-teaser col-xs-24 col-md-12">
    <div class="teaser-inner">
        {% if include.src %}
            <div class="teaser-image">
                <img class="img-responsive" src="{{ site.baseurl }}{{ include.src }}"/>
            </div>
        {% endif %}
        <div class="teaser-content lab-teaser-content">
            <h3 class="teaser-headline">{{ include.name }}</h3>
            {% if include.copy %}<p class="teaser-copy"><strong class="teaser-feature">Thema</strong></br>{{ include.copy }}</p>{% endif %}
            {% if include.attendees %}<p class="teaser-copy"><strong class="teaser-feature">Teilnehmende</strong></br>{{ include.attendees }}</p>{% endif %}
            {% if include.moderation %}<p class="teaser-copy"><strong class="teaser-feature">Moderation</strong></br>{{ include.moderation }}</p>{% endif %}
        </div>

        <div class="teaser-buttons-wrap">
                <a class="edu-btn black" href="{{ include.url }}">Zur Fachgruppe</a>
        </div>
    </div>
</div>
